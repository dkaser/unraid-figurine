<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
tar xf /boot/config/plugins/figurine/figurine_linux_amd64_v1.3.0.tar.gz -C /usr/local/bin/ --strip-components=1 deploy/figurine

upgradepkg --install-new /boot/config/plugins/figurine/unraid-figurine-0.0.1-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/figurine/unraid-figurine-*.txz 2>/dev/null | grep -v '0.0.1')

echo ""
echo "----------------------------------------------------"
echo " figurine has been installed."
echo " Version: 0.0.1"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-figurine

rm -rf /usr/local/emhttp/plugins/figurine
rm -rf /boot/config/plugins/figurine
]]>
</INLINE>
</FILE>

